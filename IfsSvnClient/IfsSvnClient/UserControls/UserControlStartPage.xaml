<UserControl x:Class="IfsSvnClient.UserControls.UserControlStartPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" 
             d:DesignWidth="600" 
             xmlns:my="clr-namespace:IfsSvnClient.Properties">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="1" Margin="3" Content="SVN Server URI:" Name="label1" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" />
        <ComboBox Grid.Row="2" Margin="3" ItemsSource="{Binding Source={x:Static my:Settings.Default}, Path=ServerUriList, Mode=OneTime}" Name="comboBoxServerUri" SelectedValue="{Binding Source={x:Static my:Settings.Default}, Path=ServerUri, Mode=TwoWay}" FontSize="20" />
    </Grid>
</UserControl>
